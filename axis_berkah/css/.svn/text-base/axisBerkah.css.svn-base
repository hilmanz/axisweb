/* ============ NEWS TICKER =================*/
#newsTicker{
	background:none;
	width:1000px; height:52px;
	clear:both;
	margin:0 auto;
	position:relative;
}
.newsTicker{
	left: 0;
    overflow: hidden;
    width: 1000px;
    position: absolute;
    top: 22px;
}
.newsTicker h1{
	color:#fff;
    font-family: 'FlamaCondensedBookRegular',arial;
	font-size:18px;
}
.horizontal_scroller{
	position:relative;
	height:24px;
    overflow: hidden;
    width: 1000px;
	display:block;
	color:#fff;
    font-family: 'FlamaCondensedBookRegular',arial;
	font-size:18px;
}
.scrollingtext{
	position:absolute;
	white-space:nowrap;
}
/* ============ FOOTER =================*/
#landingPage #footer{
	position:fixed;
	bottom:0;
	width:100%;
}
#footer{
	background:url(../img/berkah/bg_footer.png) repeat-x;
	height:100px;
	clear:both;
	padding:0 0 0 0;
	margin:40px 0 0 0;
}
.footer{
	background:url(../img/foot.png) no-repeat;
	width:626px; height:33px;
	margin:0 auto;
	text-align:center;
	padding:15px 0 0 0;
	color:#fff;
}
.footer .facebook,.footer .twitter{
	background:url(../img/social_footer.png) no-repeat;
	width:19px; height:19px;
	display:block;
	float:left;
	margin:0 5px 0 83px;
	text-decoration:none;
}
.footer .twitter{
	background:url(../img/social_footer.png) no-repeat -27px 0;
	margin:0;
}
span.copy{
	float:left;
	margin:0 0 0 10px;
	display:block;
	line-height:20px;
}
/* ============ POP UP =================*/
.popupMessage{
	background:url(../img/berkah/bg_popup.png) no-repeat;;
	width:520px;
	position:absolute;
	left:50%;
	margin:100px 0 0 -260px;
	z-index:10002;
	top:0;
	height:248px;
	-moz-box-shadow:none;
	-webkit-box-shadow:none;
	box-shadow:none;
}
.popupMessage .poupContent{
	overflow:hidden;
	padding:20px 50px;
	color:#fff;
    font-family: 'FlamaCondensedBookRegular',arial;
	font-size:18px;
	text-align:center;
}
.popupMessage .popupTop{
	height:35px;
	border:none;
}
.popupMessage .poupContent h1{
	text-transform:none;
}
.popupMessage a.closePopup{
	border:none;
	background:#fe888f;
	width:25px; height:25px;
	display:block;
	text-decoration:none;
	position:absolute;
	right:12px;
	top:8px;
	text-align:center;
	line-height:25px;
	z-index:10;
	font-size:15px;
	color:#9a2d8f;
}
a.closePopup:hover{
	color:#fff;
}
.fullImage{
	width:100%;
}
.fullImage img{
	width:100%;
}
.authorImage{
	padding:0 0 10px 0;
	overflow:hidden;
}
.authorImage span.userName{
	float:left;
	margin:15px 0 0 10px;
}

.styleTable table {
	border-collapse: collapse;
	text-align: left;
	width: 100%;
}
.styleTable {
	font: normal 12px/150% Arial, Helvetica, sans-serif;
	background: #ffe9fd;
	overflow: hidden;
	border: 1px solid #9b2d90;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
}
.styleTable table td, .styleTable table th {
	padding: 3px 10px;
}
.styleTable table thead th {
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #FF9400), color-stop(1, #C47200) );
	background:-moz-linear-gradient( center top, #FF9400 5%, #C47200 100% );
filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#FF9400', endColorstr='#C47200');
	background-color:#FF9400;
	color:#FFFFFF;
	font-size: 15px;
	font-weight: bold;
	border-left: 1px solid #ccc;
	padding:10px 10px;
}
.styleTable table thead th:first-child {
	border: none;
}
.styleTable table tbody td {
	color: #6B6B6B;
	border-left: 1px solid #ccc;
	font-size: 12px;
	font-weight: normal;
	border-bottom:solid 1px #9b2d90;
}
.styleTable table tbody .alt td {
	background: #FF9400;
	color: #FFFFFF;
}
.styleTable table tbody td:first-child {
	border: none;
	border-bottom:solid 1px #9b2d90;
	text-align:center;
}
.styleTable table tbody td:last-child{
	text-align:right;
}
#popupContentAxis{
	display:block; margin:100px 0 0 -450px; width:900px; background:#9b2d90;
}
#popupContentAxis .popupTop{
	border-bottom:solid 1px #df00c9;
}
#popupContentAxis .popupTop h1{
	text-transform:uppercase; color:#fff; line-height:30px; padding:0 0 0 20px; font-size:20px; line-height:35px;
    font-family: 'FlamaCondensedBookRegular',arial;
}
#popupContentAxis .closePopup{
	color:#fff; border-left:solid 1px #df00c9;
}
