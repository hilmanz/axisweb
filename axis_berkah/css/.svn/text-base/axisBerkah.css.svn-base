@import url('reset.css');
@import url('../font/flamacondensed.css');
body {
	background:url(../img/berkah/bg.jpg) #80267e repeat-x;
	font-size:12px;
	line-height:1.4;
	letter-spacing:0.01em;
	color:#333333;
	font-family:Verdana, Geneva, sans-serif;
}
a {
	outline:none;
	color:#ad469c;
	text-decoration:none;
	-webkit-transition: all 0.3s ease-in-out;
	-moz-transition: all 0.3s ease-in-out;
	-o-transition: all 0.3s ease-in-out;
	-ms-transition: all 0.3s ease-in-out;
	transition: all 0.3s ease-in-out;
}
a:hover{
	color:#ff00d5;
}
.left{
	float:left;
}
.right{
	float:right;
}

/* ============ LAYOUT =================*/
#container{
	display:table;
	width:100%;
	padding:30px 0 0 0;
}
#lefBar{
	width:300px;
	float:left;
}
#center{
	width:550px;
	float:left;
}
#rightBar{
	width:325px;
	float:right;
}
#top {
	width:100%;
	display:table;
	height:170px;
	color:#fff;
}
#header {
	background:url(../img/headtable.jpg) repeat-x;
	width:100%;
	display:table;
	height:521px;
}
.wrapper {
	width:1000px;
	margin:0 auto;
	position:relative;
}
.logoBarokah {
	background:url(../img/berkah/logo_barokah.png) no-repeat;
	width:154px;
	height:136px;
	text-decoration:none;
	display:block;
	position:absolute;
	z-index:80;
	margin:-20px 0 0 -40px;
	bottom:0;
}
.logoAxis {
	background:url(../img/axis_logo.png) no-repeat;
	display:block;
	width:173px;
	height:68px;
	margin:0 0 30px 0;
	float:right;
	text-decoration:none;
}
.logoBerkah{
	background:url(../img/berkah/logo_berkah.png) no-repeat;
	display:block;
	width:221px; height:198px;
	text-decoration:none;
	top:30px;
	left:-7px;
	position:absolute;
}
.clear{
	clear:both;
}
.userInfo {
	float:right;
	padding:35px 0 0 0;
    font-family: 'FlamaCondensedBookRegular',arial;
	font-size:14px;
}
.userInfo .thumb{
	margin:-30px 10px  0 0;
}
.userInfo .edit,.userInfo .logout{
	display:block;
	background:url(../img/btn_head.png) no-repeat;
	width:70px; height:16px;
	float:left;
	text-decoration:none;
}
.userInfo .logout{
	background:url(../img/btn_head.png) no-repeat -70px 0;
	width:60px;
}
.userInfo .edit:hover{
	background:url(../img/btn_head.png) no-repeat 0 -16px;
}
.userInfo .logout:hover{
	background:url(../img/btn_head.png) no-repeat -70px -16px;
}
.userInfo .welcome{
	float:left;
	padding:0 20px 0 0;
}
/* ============ CONTENT =================*/
